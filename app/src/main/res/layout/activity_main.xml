<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.urvikagola.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal"
        android:elevation="10dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eq"
        android:gravity="right"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:text="50+50"
        android:background="@color/teal"
        android:padding="5dp"
        android:textSize="40sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="="
    android:background="@color/teal"
    android:textColor="#FFFFFF"
    android:gravity="left"
    android:textSize="60sp"
    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FFFFFF"
                android:gravity="right"
                android:background="@color/teal"
                android:textSize="60sp"
                />
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/darkgray">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seven"
            android:text="7"
            android:fontFamily="sans-serif-light"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eight"
            android:text="8"
            android:fontFamily="sans-serif-light"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nine"
            android:text="9"
            android:fontFamily="sans-serif-light"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp"/>

        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/four"
            android:text="4"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/five"
            android:text="5"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp""/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/six"
            android:text="6"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp""/>
        </LinearLayout>
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/one"
        android:text="1"
        android:background="@color/darkgray"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:textSize="50sp""/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/two"
    android:text="2"
    android:background="@color/darkgray"
    android:textColor="#FFFFFF"
    android:fontFamily="sans-serif-light"
    android:textSize="50sp""/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/three"
            android:text="3"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp""/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/point"
            android:text="."
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp""/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/zero"
            android:fontFamily="sans-serif-light"
            android:text="0"
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp""/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/equal"
            android:text="="
            android:background="@color/darkgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:fontFamily="sans-serif-light"/>
        </LinearLayout></LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightgray">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:background="@color/lightgray"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/div"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:padding="0dp"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:fontFamily="sans-serif-light"
            android:background="@color/lightgray"
            android:id="@+id/add"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@color/lightgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/sub"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/lightgray"
            android:text="*"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp"
            android:id="@+id/mul"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:background="@color/lightgray"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/div"/>
    </LinearLayout></LinearLayout>

</LinearLayout>
